#include <iostream>
#include <string>
#include <map>
#include <vector>
#include <ctime>
#include <cstdlib>

class ChatBot {
public:
    ChatBot();
    void introduce();
    void respond(const std::string& question);
    void listQuestions();

private:
    std::map<std::string, std::vector<std::string>> qa;
    void loadQuestions();
    std::string getRandomResponse(const std::string& question);
};

ChatBot::ChatBot() {
    std::srand(std::time(0)); // Инициализация генератора случайных чисел
    loadQuestions();
}

void ChatBot::introduce() {
    std::cout << "Привет! Меня зовут Юлия, я ваша девушка-чатбот. Спроси меня что-нибудь.\n";
}

void ChatBot::respond(const std::string& question) {
    if (qa.find(question) != qa.end()) {
        std::string response = getRandomResponse(question);
        std::cout << "Юлия: " << response << std::endl;
    } else if (question == "все вопросы") {
        listQuestions();
    } else {
        std::cout << "Юлия: Я не уверена, как ответить на этот вопрос.\n";
    }
}

void ChatBot::listQuestions() {
    std::cout << "Вот список всех возможных вопросов:\n";
    for (const auto& pair : qa) {
        std::cout << "- " << pair.first << std::endl;
    }
}

