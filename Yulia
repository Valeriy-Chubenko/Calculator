std::string ChatBot::getRandomResponse(const std::string& question) {
    const auto& responses = qa[question];
    int randomIndex = std::rand() % responses.size();
    return responses[randomIndex];
}

int main() {
    ChatBot julia;
    julia.introduce();

    std::string userInput;
    while (true) {
        std::cout << "Вы: ";
        std::getline(std::cin, userInput);
        if (userInput == "exit") break;
        julia.respond(userInput);
    }

    return 0;
}
